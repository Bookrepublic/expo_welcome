  .hero__body
    .hero__body__inner.align--left
      .wrap
        .flag
          .flag__image
            img src='https://s3-eu-west-1.amazonaws.com/expo-welcome/idea.png' alt='Curioso?' title='Curioso?'
          .flag__body
            .hero__heading.no-lateral-margin
              h2.alpha
                | Curioso?
            .hero__text.no-lateral-margin
              p
